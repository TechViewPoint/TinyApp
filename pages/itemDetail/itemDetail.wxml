    <view class="section section_gap">
      
      <view class="section__ctn">
        <image style="width: 100%; height: 250px; background-color: #eeeeee;" mode="aspectFill" src="{{item.itemImgs[0]}}"></image>
      </view>
    </view>
    
  </view>

<view class="page">
    
    <view class="">
        <view class="weui-article">
            <view class="weui-article__h1 .money">¥{{item.price}}</view>
            <view class="weui-article__section">
                <view class="weui-article__h2">{{item.title}}</view>
                <view class="weui-article__section">
                    <view class="weui-article__h3"></view>
                    <view class="weui-article__p">
                        {{item.info}}
                    </view>
                    <view class="weui-article__p" wx:for-item="image" wx:for="{{item.itemImgs}}">
                        <image class="weui-article__img" src="{{image}}" mode="aspectFit" style="height: 250px" />
                      
                    </view>
                </view>
               
            </view>
        </view>
    </view>
</view>
