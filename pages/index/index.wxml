
<view class="page">
    <view class="page__hd">
        <view class="page__title">自打印</view>
        <view class="page__desc">临桂时代花园小区生活助手</view>
    </view>
    <view class="page__ft">
        <view class="weui-grids">
            <block wx:for="{{functions}}" wx:key="*this">
                <bouton bindtap="gridTapHandle" data-task="{{item}}" class="weui-grid_4" hover-class="weui-grid_active" wx:if="{{item.isVisible}}">
                    <i-icon size="24" type="{{item.icon}}" />
                    <view class="weui-grid__label">{{item.name}}</view>
                </bouton>
            </block>
        </view>
    </view>
    <view class="weui-footer weui-footer_fixed-bottom">
            <view class="weui-footer__links">
                <navigator url="../../index/index" class="weui-footer__link">自打印</navigator>
            </view>
            <view class="weui-footer__text">Copyright © 2020 Roy Huang</view>
        </view>
</view>

