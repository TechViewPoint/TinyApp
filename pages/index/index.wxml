<view class="page">
    <view class="page__hd">
        <view class="page__title">花园小帮手</view>
        <view class="page__desc">临桂时代花园小区生活app</view>
    </view>
    <view class="page__ft">
        <view class="weui-grids">
            <block wx:for="{{functions}}" wx:key="*this">
                <bouton bindtap="gridTapHandle" data-task="{{item}}" class="weui-grid" hover-class="weui-grid_active">
                    <i-icon size="24" type="{{item.icon}}" />
                    <view class="weui-grid__label">{{item.name}}</view>
                </bouton>
            </block>
        </view>
    </view>
</view>

